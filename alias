alias cat='ccat --bg=dark'
alias git=hub
alias live=livestreamer-curses

alias ls='ls --color'
alias ll='k'
alias k='k -A -h --no-vcs'
alias cl='cd && clear'
alias mpv_hd='mpv --video-sync=display-resample --display-fps=60 --vo=opengl-hq:interpolation'
alias reload='source .zshrc'
alias open='xdg-open'
alias fucking='sudo'
alias clear_pacman_cache='sudo pacman -Sc'
alias sc='systemctl'
alias show_unused='expac -HM "%-20n\t%10d" $(pacman -Qtdq|sort)'
alias remove_unused='pacman -Rns $(pacman -Qtdq)'
alias update_mirrorlist='sudo reflector --sort rate --save /etc/pacman.d/mirrorlist -c "Germany" -f 5 -p https'
alias mount_usb='sudo mount -t vfat /dev/sdg1 /mnt/usb -o user,exec'
alias unmount_usb='sudo umount /mnt/usb'
alias mkd=take
alias t='todo.sh'

autoload -U zmv
alias fix_music_names="zmv '(*) [*].mp3' '$1.mp3' && zmv '* _ (*).mp3' '$1.mp3'"

eval "$(thefuck --alias)"

rtop() {
	ssh "$i" -t top
}

twitch() {
	livestreamer "twitch.tv/$1" best
}

[ -f "$DOTFILES/alias_local" ] && source "$DOTFILES/alias_local"
